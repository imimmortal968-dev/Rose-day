  /* Floating roses */
  setInterval(() => {
    const rose = document.createElement('div');
    rose.className = 'rose';
    rose.innerText = 'ğŸŒ¹';
    rose.style.left = Math.random() * 100 + 'vw';
    rose.style.animationDuration = (3 + Math.random() * 3) + 's';
    document.body.appendChild(rose);
    setTimeout(() => rose.remove(), 6000);
  }, 500);

  /* Music */
  const music = document.getElementById('music');
  let playing = false;
  function toggleMusic() {
    if (!playing) {
      music.play();
      playing = true;
    } else {
      music.pause();
      playing = false;
    }
  }

  /* Confetti hearts */
  function confetti() {
    for (let i = 0; i < 30; i++) {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.innerText = 'ğŸ’–';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (2 + Math.random() * 3) + 's';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }
  }

  /* Message */
  function sendMessage() {
    const name = document.getElementById('name').value;
    const msg = document.getElementById('msg').value;

    if (name && msg) {
      document.getElementById('output').innerText = `ğŸŒ¹ Dear ${name}, your message was sent with love!`;
      document.getElementById('title').innerText = `ğŸŒ¹ Happy Rose Day ${name} ğŸŒ¹`;
      confetti();
    } else {
      document.getElementById('output').innerText = 'Please fill all fields ğŸŒ¸';
    }
  }
